<%= content_for :sitemap do %>
<span class="current">列表</span>
<% end %>
<%= render 'base' %>
<div class="tools">
  <a href="<%= projects_path %>" class="button">全部</a>
  <a href="<%= new_project_path %>" class="button">新建</a>
</div>

<div id="projects">
  <%= grid(@projects, :show_filters => :always) do |g|
    g.column :column_name => '', :attribute_name => 'id', :no_filter => true
    	    
		   g.column :column_name => 'Name', :attribute_name => 'name'
			   
		    
		   g.column :column_name => 'Summary', :attribute_name => 'summary'
		   g.column :column_name => 'Status', :attribute_name => 'status'
			   
		    
		   g.column :column_name => 'Begin at', :attribute_name => 'begin_at'
		   g.column :column_name => 'Trace', :attribute_name => 'trace'			   
	    g.column :column_name => '创建时间', :attribute_name => 'created_at'
    g.column :column_name => '操作' do |c|
      raw "#{link_to '修改', edit_project_path(c.id)}
      #{link_to '删除', project_path(c.id), :method => :delete, :confirm => '确定要删除吗?'}"
    end
  end %>
</div>


